<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_partner_property_form" model="ir.ui.view">
			<field name="name">res.partner.property.form.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id"
				ref="account.view_partner_property_form"></field>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='sales_purchases']"
					position="after">
					<page string="Football" name="football"
						attrs="{'invisible': [('is_company','=',True)]}">
						<group>
							<group>
								<field name="club_id"></field>
							</group>
							<group></group>
						</group>
					</page>
				</xpath>
			</field>
		</record>
		<record id="player_action" model="ir.actions.act_window">
			<field name="name">Player</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.partner</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>